#! /bin/bash

VERSION="latest"

docker create \
 --name=smartme_test_iotronic_conductor \
 --restart unless-stopped\
 --network=smartme_test_network \
 --hostname conductor \
 -p 8813:8812 \
 -v smartme_test_iotronic_conductor_config:/etc/iotronic/ \
 -v /var/log/iotronic-conductor:/var/log/iotronic \
smartme/smartme_test_iotronic_conductor:$VERSION

docker cp conf/iotronic.conf smartme_test_iotronic_conductor:/etc/iotronic/

docker run --rm \
 --network=smartme_test_network \
 -v smartme_test_iotronic_conductor_config:/etc/iotronic/ \
 -v /var/log/iotronic-conductor:/var/log/iotronic \
smartme/smartme_test_iotronic_conductor:$VERSION \
/bin/sh -c "chown -R iotronic:iotronic /var/log/iotronic/"

docker run --rm \
 --network=smartme_test_network \
 -v smartme_test_iotronic_conductor_config:/etc/iotronic/ \
 -v /var/log/iotronic-conductor:/var/log/iotronic \
smartme/smartme_test_iotronic_conductor:$VERSION /bin/sh -c "iotronic-dbsync"

docker start smartme_test_iotronic_conductor